<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:m='urn:import:gwt.material.design.client.ui'>

    <ui:with field="bundle" type="com.progressoft.security.layout.client.views.AuthenticationLayoutBundle"/>
    <ui:style gss="true">
        .sample-div{
            background-color: #CECECE;
        }
    </ui:style>

    <g:HTMLPanel>
        <m:MaterialHeader depth="996" layoutPosition="FIXED" width="100%">
            <m:MaterialNavBar ui:field="appNav" backgroundColor="BLUE_LIGHTEN_1">
                <m:MaterialNavBrand text="Security"/>

                <m:MaterialNavSection float="RIGHT" hideOn="HIDE_ON_SMALL_DOWN">
                    <m:MaterialLink iconPosition="NONE" iconType="HELP_OUTLINE" marginRight="20" />
                    <m:MaterialIcon iconPosition="NONE" iconType="SECURITY" marginRight="20"/>
                </m:MaterialNavSection>
            </m:MaterialNavBar>
        </m:MaterialHeader>
        <m:MaterialPanel ui:field="mainPanel">

        </m:MaterialPanel>
    </g:HTMLPanel>
</ui:UiBinder>