<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:m='urn:import:gwt.material.design.client.ui'
             xmlns:ma='urn:import:gwt.material.design.addins.client"'>

    <ui:with field="bundle" type="com.progressoft.security.userinfo.client.views.UserInfoBundle"/>
    <ui:style gss="true">
        .sample-div{
        background-color: #CECECE;
        }
    </ui:style>
    <m:MaterialRow ui:field="root">
        <m:MaterialChip ui:field="userChip" addStyleNames="{bundle.style.userDisplayName}" letter="" letterColor="WHITE" letterBackgroundColor="BLUE_DARKEN_3" text="" backgroundColor="BLUE_LIGHTEN_2" textColor="WHITE" hideOn="HIDE_ON_SMALL_DOWN">
        </m:MaterialChip>
    </m:MaterialRow>
</ui:UiBinder>